manifest {
    name            = 'vcspipe'
    author          = """Christopher Lee"""
    homePage        = 'https://github.com/cplee1/vcspipe'
    description     = """A pipeline to process MWA VCS data"""
    mainScript      = 'main.nf'
    defaultBranch   = 'master'
    nextflowVersion = '!>24.02.0-edge'
    version         = '1.0.0'
    doi             = ''
}

params {
    timestamp = new java.util.Date().format('yyyy-MM-dd_HH-mm-ss')

    // Flags
    help      = false
    download  = false
    reduce    = false
    vdif      = false
    dspsr     = false
    pdmp      = false
    prepfold  = false

    // Options
    vcs_dir       = null
    obsid         = null
    calid         = null
    offset        = null
    duration      = null
    low_chan      = null
    num_chan      = null
    targets       = null
    asvo_api_key  = null
    num_dl_jobs   = 1
    num_beams     = null
    vcsbeam_forks = 1
    vcsbeam_wt    = 9 // hours
    untar_wt      = 1 // hours
    dspsr_wt      = 4 // hours
    pav_wt        = 1 // hours
    pdmp_wt       = 2 // hours
    prepfold_wt   = 4 // hours
    nbin          = 64
    nfine         = 128 // channels per coarse channel
    tint          = 8
    max_chans     = 96
    max_subints   = 64
    nsub          = 128
    npart         = 64

    // Cluster name
    cluster = null
}

profiles {
    setonix {
        includeConfig 'conf/setonix.config'
    }
    smart {
        params.low_chan = 109
        params.num_chan = 24
    }
    psrfits {
        params.vdif = false
        params.num_beams = 4
        params.nfine = 128
    }
    vdif {
        params.vdif = true
        params.num_beams = 1
        params.nfine = 16
    }
    msp {
        params.vdif = true
        params.num_beams = 1
        params.nfine = 4
        params.nbin = 512
        params.tint = 10
    }
}